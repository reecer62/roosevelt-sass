{
  "name": "roosevelt-sass",
  "description": "SASS CSS preprocessor support for Roosevelt MVC web framework",
  "author": "Roosevelt Framework Team <rooseveltframework@gmail.com>",
  "contributors": [
    "Eric Newport <kethinov@gmail.com>",
    "Troy Coutu <autre31415@gmail.com>",
    "Alexander J. Lallier <alexanderlallier@aol.com>"
  ],
  "version": "0.4.1",
  "homepage": "https://github.com/rooseveltframework/roosevelt-sass",
  "license": "CC-BY-4.0",
  "main": "roosevelt-sass.js",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=10.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "node-sass": "~4.10.0"
  },
  "devDependencies": {
    "codecov": "3.1.0",
    "eslint": "5.9.0",
    "eslint-plugin-mocha": "5.2.0",
    "fs-extra": "7.0.1",
    "husky": "1.1.4",
    "lint-staged": "8.0.4",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "roosevelt": "0.12.1",
    "standard": "12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rooseveltframework/roosevelt-sass.git"
  },
  "keywords": [
    "roosevelt.js",
    "node-sass",
    "node.js",
    "sass",
    "css",
    "preprocessor"
  ],
  "preferGlobal": true,
  "_from": "roosevelt-sass@*",
  "gitHead": "",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "plugins": [
      "mocha"
    ],
    "rules": {
      "mocha/no-exclusive-tests": "error"
    }
  },
  "nyc": {
    "reporter": [
      "html",
      "text",
      "lcov"
    ]
  },
  "scripts": {
    "codecov": "./node_modules/.bin/codecov",
    "coverage": "nyc mocha --timeout 25000 test/unit",
    "lint": "standard && eslint ./test/unit",
    "test": "npm run lint && mocha --timeout 25000 test/unit"
  },
  "lint-staged": {
    "*.js": "standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
